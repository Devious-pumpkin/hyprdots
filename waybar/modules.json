{
    "hyprland/workspaces": {
        "active-only": false,
	    "disable-scroll": true,
        "all-outputs": false,
        "warp-on-scroll": false,
        "format": "{name}"
    },
    "network": {
        "format-wifi": "󰤨  {essid} ({signalStrength}%)",
        "format-ethernet": "󰈀  {bandwidthUpBytes}󰕒  {bandwidthDownBytes}󰇚",
        "format": "OFFLINE",
        "format-disconnected": "󰤭",
	    "tooltip-format": ""

    },
    "cpu": {
        "format": "  {usage}%",
        "interval": 1,
	    "tooltip": false
    },
    "memory": {
	    "interval": 1,
        "format": "  {}%",
	    "tooltip": false
    },
    "temperature": {
        "interval": 10,
        "hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input",
        "critical-threshold": 80,
        "format-critical": " {temperatureC}",
        "format": " {temperatureC}°C",
        "tooltip": false
    },
    "battery": {
        "full-at": 100,
        "states": {
            "critical": 10,
            "low": 30,
            "medium": 60,
            "high": 80
        },
        "format": "  {capacity}%",
        "format-charging": "󰂄  {capacity}%",
        "format-critical": " {capacity}%",
        "format-high": " {capacity}%",
        "format-medium": " {capacity}%",
        "format-low": " {capacity}%",
        "tooltip-format": "Cycles: {cycles}, Health: {health}",
        "tooltip": true
    },
    "clock": {
        "format": "{:%H:%M | %e %b} ",
        "tooltip": false
    },
    "wireplumber": {
	    "format-muted": "󰸈",
        "tooltip-format": "{volume}",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-scroll-up": "",
        "on-scroll-down": "",
        "states": {
            "high": 70,
            "mid": 40,
            "low": 1,
            "mute": 0
        },
        "format-mid": "󰖀",
        "format-high":"󰕾",
        "format-low": "󰕿",
        "format-mute": "󰸈"
    },
    "bluetooth": {
        "format": "󰂲",
        "format-disabled": "",
        "format-connected": "",
        "format-connected-battery": ": {device_battery_percentage}%",
        "tooltip-format": "{device_alias}"
    },
    "custom/xournal": {
        "format": "󱓩",
        "tooltip": false,
        "on-click": "xournalpp"
    },
    "custom/firefox": {
        "format": "",
        "tooltip": false,
        "on-click": "firefox"
    },
    "custom/idlestate": {
        "exec": "~/.config/waybar/scripts/get-idle-state.sh",
        "tooltip": false,
        "on-click": "idle-toggle",
        "format": "{}",
        "interval": 1
    }
}
